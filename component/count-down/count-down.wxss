/* component/count-down/count-down.wxss */
.count-down-content {
  display:flex;
  align-items:center;
  justify-content:flex-end;
  padding-right:1.2rem;
  box-sizing:border-box;
  height: 100%;
  width: 100%;
  font-size: 10pt;
  color: #ffffff;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
}
  .count-time {
    background: #00b3a4;
    display:flex;
    align-items:center;
    justify-content:center;
    width: 1.3em;
    height: 1.3em;
    margin: 0 .5em;
    border-radius: .25em
  }