/* component/live-card/live-card.wxss */
.live-card-item {
  width: 100%;
  box-sizing: border-box;
  background-color: #ffffff;
}
.card-img-wrpper {
  position: relative;
  display:inline-block;
  width: 100%;
  font-size: 0;
  height: 0;
  line-height: 0;
  padding: 53% 0 0;
  background: #ccc;
}
.card-status:before {
  position: absolute;
  display: block;
  z-index: 1;
  top: 12%;
  left: 0;
  padding: 0 .8em;
  font-size: .8rem;
  height: 1.3rem;
  line-height: 1.42rem;
  border-top-right-radius: .25rem;
  border-bottom-right-radius: .25rem;
  color: #ffffff;
}
.card-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.count-down-wrapper {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 2.5rem;
  z-index: 1;
  display: none;
}
.card-body {
  padding: 0 .8rem;
  box-sizing: border-box;
}
  .card-title,
  .start-time {
    overflow:hidden;  
    text-overflow:ellipsis;  
    display:-webkit-box;  
    -webkit-line-clamp:1;  
    -webkit-box-orient:vertical; 
    color: #353535;
    font-size: 11pt;
  }
  .start-time,
  .card-detail {
    color: #888888;
    font-size: 9pt;
    padding-top: .15rem;
    padding-bottom: .4rem;
  }
  .card-detail {
    display: flex;
    justify-content: space-between;
  }
    .view-num {
      position: relative;
      padding-left: 1.2rem;
    }
    .view-num::before {
      content: "";
      position: absolute;
      top: .3rem;
      left: 0;
      display: inline-block;
      width: .8rem;
      height: .8rem;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      background-image: url(data:image/png;base64,);
    }
    .comment-num {
      position: relative;
      padding-right: 1.2rem;
    }
    .comment-num::before {
      content: "";
      position: absolute;
      top: .3rem;
      right: 0;
      display: inline-block;
      width: .8rem;
      height: .8rem;
      background-repeat: no-repeat;
      background-size: 100% 100%;
      background-image: url(data:image/png;base64,);
    }

.unstart .card-status:before {
  content: "预告";
  background: rgba(16,173,156,0.9);
}
.living .card-status:before {
  content: "直播";
  background: rgba(236,115,104,0.9);
}
.end .card-status:before {
  content: "回放";
  background: rgba(119,119,119,0.5);
}
.unstart .card-detail {
  display: none;
}
.living .start-time,
.end .start-time {
  display: none;
}