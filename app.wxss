/**app.wxss**/
page {
  height: 100%;
  width: 100%;
  background-color: #f4f5f6;
}
.page-container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}
.header {
  position: fixed;
  width: 100%;
  height: 3rem;
  padding: .5rem .8rem;
  box-sizing: border-box;
  display: flex;
  align-items:center;
  background-color: #ffffff;
  overflow: hidden;
  z-index: 9;
}
.main-container {
  margin-top: 3rem;
  overflow-y: auto;
  flex:1;
}

/* 修改默认样式  */
.navigator-hover {
  background-color: transparent; opacity: transparent;
}
